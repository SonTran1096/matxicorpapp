@model IEnumerable<MatxiCorp.App.Models.ViewModels.OrgEmpViewModel>
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-8 col-xs-12">
        <form asp-action="Index" method="get">
            <div class="row">
                <label class="control-label">Search with EmpCode, EmpName, OrgCode, OrgName:</label>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <input type="text" value="@ViewBag.Keyword" name="keyword" class="form-control" />
                </div>
                <div class="cold-md-8">
                    <button type="submit" class="btn btn-primary">Tìm kiếm</button>
                </div>
            </div>
        </form>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>Mã NV</th>
            <th>Họ tên</th>
            <th>Tổ chức</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
            {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmpCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmpName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrgName)
            </td>
        </tr>
            }
    </tbody>
</table>
